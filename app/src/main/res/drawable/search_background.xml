<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Rounded corners matching your card style -->
    <corners android:radius="24dp" />

    <!-- Semi-transparent white background -->
    <solid android:color="#80FFFFFF" /> <!-- 50% opacity white -->

    <!-- Border using your secondary color -->
    <stroke
        android:width="1.5dp"
        android:color="@color/secondary" /> <!-- #DE4178 from your palette -->

    <!-- Add some padding inside -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>